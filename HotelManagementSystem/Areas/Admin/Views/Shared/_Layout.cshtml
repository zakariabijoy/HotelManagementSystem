<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> Hotel Management System</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Admin/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Areas/Admin/Content/css/simple-sidebar.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>

    <!--font-awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0/js/all.min.js"></script>

</head>

<body>

<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
        <div class="sidebar-heading">
            <i class="fas fa-hotel mr-1"></i>HMS

        </div>

        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "DashBoard")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-tachometer-alt mr-1"></i>Dashboard</a>

        </div>
        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "AccomodationTypes")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-building mr-1"></i>Accomodation Types</a>

        </div>
        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "AccomodationPackages")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-cubes mr-1"></i>Accomodation Packages</a>

        </div>
        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "Accomodations")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-door-open mr-1"></i>Accomodations</a>

        </div>

        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "Roles")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users-cog mr-1"></i>Roles</a>

        </div>

        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "Users")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users mr-1"></i>Users</a>

        </div>
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i></button>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>

                </ul>
            </div>
        </nav>

        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>

   @using (Html.BeginForm("LogOff", "Account", new{area=""}, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    }
<!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
<script src="~/Areas/Admin/Content/vendor/jquery/jquery.min.js"></script>

<script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<script src="~/Areas/Admin/Content/vendor/sweetalert2.all.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>



@RenderSection("scripts", required: false)

</body>

</html>
